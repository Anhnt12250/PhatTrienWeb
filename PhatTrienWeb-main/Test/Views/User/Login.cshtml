@{
}

@model PhatTrienWeb.Models.LoginViewModel

<div class="cleaner h20"></div>
<div id="templatemo_main_top"></div>
<div id="templatemo_main">
    @await Component.InvokeAsync("Sidebar")
    <div id="content">
        <h2>Login</h2>
        <div class="col col_13">
            @Html.ValidationMessage("LoginError")
            <form id="loginForm" method="post" name="loginForm" asp-action="Login">
                <label asp-for="UserName">Username:</label>
                <input asp-for="UserName" type="text" id="username" name="username" class="required input_field" />
                <span asp-validation-for="UserName" style="color: red; display: block"></span>
                <div class="cleaner h10"></div>

                <label asp-for="Password">Password:</label>
                <input asp-for="Password" type="password" id="password" name="password" class="validate-password required input_field" />
                <span asp-validation-for="Password" style="color: red; display: block"></span>
                <div class="cleaner h10"></div>

                <input type="submit" value="Send" id="submit" name="submit" class="subscribebtn float_l" />
            </form>
        </div>
    </div>
    <div class="cleaner"></div>
</div>
